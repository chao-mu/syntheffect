<patch>
    <pipelines>
        <pipeline in="channel1" out="channel1-blurred">
            <shader vert="Convolution" frag="Blur"/>
        </pipeline>
        <pipeline in="channel1" out="out">
            <shader frag="Displace">
                <paramTexture name="displacerTex" value="channel1-blurred"/>
            </shader>
            <!--shader vert="Convolution" frag="Sharpen"/-->
            <shader vert="Convolution" frag="Scharr">
                <paramBool name="rangeAdjustEnabled" value="true"/>
                <paramFloat name="rangeAdjustHigh" value="10"/>
            </shader>
        </pipeline>
    </pipelines>
    <controls/>
</patch>

<patch>
    <pipelines>
        <pipeline in="channel1" out="channel1-blurred">
            <shader vert="Convolution" frag="Blur" id="blur"/>
        </pipeline>
        <pipeline in="channel1" out="out">
            <shader frag="Displace" id="displace">
                <paramTexture name="displacerTex" value="channel1-blurred"/>
            </shader>
            <!--shader vert="Convolution" frag="Sharpen" id="sharpen"/-->
            <shader vert="Convolution" frag="Scharr" id="scharr">
                <paramBool name="rangeAdjustEnabled" value="1"/>
                <paramFloat name="rangeAdjustHigh" value="10"/>
            </shader>
        </pipeline>
    </pipelines>
    <controls/>
</patch>
<patch>
    <pipelines>
        <pipeline in="channel1" out="pinwheel">
            <shader frag="Huerific"/>
            <shader frag="HSVOffset">
                <paramTime name="hueOffset" speed="0.2"/>
            </shader>
            <shader frag="MixPinwheel">
                <paramTexture name="secondTex" value="channel1"/>
                <paramFloat name="anchorX" value="0"/>
                <paramFloat name="anchorY" value="0"/>
            </shader>
        </pipeline>
        <pipeline in="pinwheel" out="out">
            <shader vert="Convolution" frag="Scharr"/>
            <shader frag="MixPinwheel">
                <paramTexture name="secondTex" value="pinwheel"/>
                <paramFloat name="anchorX" value="1"/>
                <paramFloat name="anchorY" value="1"/>
            </shader>
        </pipeline>
   </pipelines>
</patch>

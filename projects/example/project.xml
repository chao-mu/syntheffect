<project assets="assets.xml" pipelines="pipelines.xml">
    <joysticks>
        <joystick settings="xbox"/>
    </joysticks>
    <params>
        <!-- Effects -->
        <param name="enable_pinwheel_splash" value="xbox_right_stick_x-pressed"/>
        <param name="enable_blur" value="xbox_button_b"/>
        <param name="enable_pretty_colors" value="xbox_button_a"/>
        <param name="enable_spin_zoom" value="xbox_button_x"/>
        <param name="enable_red_wander" value="xbox_dir_pad_x" cast="positive-is-true"/>
        <param name="enable_blue_wander" value="xbox_dir_pad_x" cast="negative-is-true"/>
        <param name="enable_green_wander" value="xbox_dir_pad_y" cast="positive-is-true"/>
        <param name="enable_rgb_wander" value="xbox_dir_pad_y" cast="negative-is-true"/>
        <param name="enable_inversion" value="xbox_button_y"/>
        <param name="edge_detection_amount" value="xbox_left_trigger" low="0" high="1"/>
        <param name="pixelate_x" value="xbox_left_stick_x" low="-50" high="50"/>
        <param name="pixelate_y" value="xbox_left_stick_y" low="-50" high="50"/>
        <param name="enable_zoom" value="xbox_button_top_right" />
        <param name="zoom_amount" value="xbox_button_top_right-pressed_time" />
        <param name="enable_oilpainting" value="xbox_button_top_left" />
        <param name="skew_x" value="xbox_right_stick_y" low="0.5" high="-0.5" />
        <param name="skew_y" value="xbox_right_stick_x" low="0.5" high="-0.5" />
        <param name="delay_amount" value="xbox_right_trigger" low="0" high="0.9" />
        
        <!-- Assets -->
        <param name="trigger_dancing_assets" value="xbox_button_middle_left"/>
        <param name="trigger_calendar_assets" value="xbox_button_middle_right"/>
    </params>
</project>
